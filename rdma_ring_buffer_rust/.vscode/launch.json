    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Client Adapter",
            "program": "${workspaceFolder}/target/debug/rdma_adapter",
            "args": [
                "-s",
                "${env:SERVER_IP}",
                "-p",
                "${env:SERVER_PORT}",
                "--message-size",
                "${env:MESSAGE_SIZE}",
            ],
            "envFile": ".env",
            "cwd": "${workspaceFolder}"
        }
    ]
}