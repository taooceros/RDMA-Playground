server_ip := "192.168.2.1"
port := "12873"

executable := "rdma_ring_buffer_rust"

alias s := server
alias c := client

alias q := quick-commit

git_update:
	git pull

build: git_update
	cargo build

server: build
	./target/debug/{{executable}} --port {{port}} -g 1

client: build
	./target/debug/{{executable}} -s {{server_ip}} --port {{port}} -g 1

quick-commit:
	git add .
	git commit -am "update"
	git push