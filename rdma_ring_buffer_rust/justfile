server_ip := "192.168.2.1"
port := "12873"

executable := "rdma_ring_buffer_rust"

alias s := server
alias c := client


git_update:
	git pull

build: git_update
	cargo build

server: build
	./target/debug/{{executable}} --port {{port}}

client: build
	./target/debug/{{executable}} -s {{server_ip}} --port {{port}}

update:
	git add .
	git commit -am "update"