server_ip := "192.168.2.3"
port := "12873"

executable := "rdma_ring_buffer_rust"

alias s := server
alias c := client

alias q := quick-commit

git_update:
	git pull

build: git_update
	cargo build

server: build
	./target/debug/{{executable}} --port {{port}}

client: build
	./target/debug/{{executable}} -s {{server_ip}} --port {{port}}

quick-commit:
	git add .
	git commit -am "update"
	git push